---
import TodoItem from '../components/TodoItem.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet">

		<title>Frontend Mentor | Todo app</title>
	</head>
	<body>
		<main>
			<header>
				<h1>Todo</h1>
				<label class="theme-picker">
					<input type="checkbox" name="theme">
					<img src="../../icon-sun.svg" alt="">
					<img src="../../icon-moon.svg" alt="">
				</label>
			</header>
			<article>
				<ol>
					<TodoItem></TodoItem>
					<TodoItem></TodoItem>
					<TodoItem></TodoItem>
					<TodoItem></TodoItem>
				</ol>

<style>
			</article>
		</main>
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}
	html {
		padding: 0;
		margin: 0;
		font-size: 62.5%;
	}
	body {
		background-image: url('../../public/bg-desktop-light.jpg');
		background-position: center top;
		background-repeat: no-repeat;
		font-size: 1.6rem;
	}
	main {
		width: 100%;
		max-width: 600px;
		margin: 75px auto 0;
		padding-inline: 15px;
	}
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	h1 {
		font-family: 'Josefin Sans', sans-serif;
		font-weight: 700;
		text-transform: uppercase;
		color: white;
	}
	input {
		appearance: none;
		margin: 0;
	}
	.theme-picker:focus-visible,
	.theme-picker:focus {
		outline: 1px solid red;
	}
	.theme-picker input:checked ~ img[src$='sun.svg'],
	.theme-picker input:not(:checked) ~ img[src$='moon.svg'] {
		/* By default it's Light mode */
		display: none;
	}
	ol {
		list-style: none;
		padding: 0;
		margin: 0;
	}
</style>
